<section class="box_effect">
	<h2 class="title">
		<%- link_to(post.title, '/topics/' + topic_id + '/posts/' + post._id) %>
	</h2>
	<p class="username">投稿者:<%= post.username %>
	<p class="date">投稿日時:<%= post.created_at %></p>
	<div class="detail">
		<%- text_format(escape(post.detail)) %>
	</div>

	<form class="delete" action="/topics/<%= topic_id %>/posts/<%= post._id %>" method="POST">
		<input type="hidden" name="_method" value="DELETE">
		<div class="col-xs-1">
			<input type="submit" name="deletepost" class="btn btn-block btn-g btn-danger" value="delete">
		</div>
	</form>
	<br />
</section>
